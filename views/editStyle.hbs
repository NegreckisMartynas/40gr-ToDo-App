                <button onclick="" class="edit hidden">
                    <i class="fa-solid fa-rotate-left"></i>
                </button>
            </div>
        </div>
    </section>
    <form method="post">
        <div>
            <span>Background color</span><input type="color" name="background-color" onchange="changeEditableStyles()"/>
            <span>Text color</span><input type="color" name="color"/>
            <span>Priority color</span><input type="color" name="priority-color"/>
            <submit></submit>
        </div>
    </form>
    <script>
        function changeEditableStyles() {
            //get input values
            //generate CSS styles
            //change #editable-styles content
            const bgInput = document.querySelector('form').elements["background-color"];
            const bgColor = bgInput.value;
            const style =
`
        .note.style-edited {
            background-color: ${bgColor}
        }

        .note.style-edited .note-priority {
            
        }
`       
            document.querySelector('#editable-styles').innerText = style;
        }

    </script>
