    <section>
        <div class="note style-edited" >
            <span class="note-text">
                Example Text
            </span>
            <span class="note-priority">
                priority: 1000
            </span>
            <div class="buttons">
                <button onclick="" class="standard">
                    <i class="fa-solid fa-pen"></i>
                </button>
                <button onclick=""  class="standard">
                    <i class="fa-solid fa-xmark"></i>
                </button>
