{{#with model}}
{{> dynamic-style this }}
<div id="title-container">
    <h1>
        {{title}}
    </h1>
</div>
<hr/>
<main>
    <form id="note-input" method="post">
        <div class="note-input note-text">
            <input type="text" name="note" class="note"
               placeholder="Enter a new note here!"/>
            <input type="number" name="priority" class="priority"
                placeholder="Priority"/>
        </div>
        <select name="style" class="note-input note-style">
            <option value="0" class="note">Default</option>
            {{#each styles}}
            <option value="{{this.styleId}}" class="note style-{{this.styleId}}">{{this.name}}</option>
            {{/each}}
        </select>
        <button type="submit">Save</button>
    </form>
    <section>
        {{#each notes}}
        <div class="note {{#if this.style}}style-{{this.style}}{{/if}}" >
            <span class="note-text">
                {{this.note}}
            </span>
            <span class="note-priority">
                priority: {{this.priority}}
            </span>
            <div class="buttons">
                <button onclick="editNote({{this.noteId}}, this)" class="standard">
                    <i class="fa-solid fa-pen"></i>
                </button>
                <button onclick="deleteNote({{this.noteId}})"  class="standard">
                    <i class="fa-solid fa-xmark"></i>
                </button>
                <button onclick="saveEdit({{this.noteId}}, this)" class="edit hidden">
                    <i class="fa-solid fa-floppy-disk"></i>
                </button>
                <button onclick="undoEdit({{this.noteId}}, this)" class="edit hidden">
                    <i class="fa-solid fa-rotate-left"></i>
                </button>
            </div>
        </div>
        {{/each}}
    </section>
</main>
{{/with}}