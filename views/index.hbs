{{#with model}}
<div id="title-container">
    <h1>
        {{title}}
    </h1>
</div>
<hr/>
<main>
    <form id="note-input" method="post">
        <input type="tegetxt" name="note"
               placeholder="Enter a new note here!"/>
        <button type="submit">Save</button>
    </form>
    <section>
        {{#each notes}}
        <div class="note">
            <span>{{this}}</span>
            <div class="buttons">
                <i class="fa-solid fa-circle-xmark"></i>
                <i class="fa-solid fa-pen"></i>
            </div>
        </div>
        
        {{/each}}
    </section>
</main>
{{/with}}