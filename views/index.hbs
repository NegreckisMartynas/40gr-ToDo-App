{{#with model}}
<div id="title-container">
    <h1>
        {{title}}
    </h1>
</div>
<hr/>
<main>
    <form id="note-input" method="post">
        <input type="text" name="note"
               placeholder="Enter a new note here!"/>
        <button type="submit">Save</button>
    </form>
    <section>
        {{#each notes}}
        <div class="note">
            <span>{{this.note}}</span>
            <div class="buttons">
                <button>
                    <i class="fa-solid fa-pen"></i>
                </button>
                <button onclick="deleteNote({{this.noteId}})">
                    <i class="fa-solid fa-xmark"></i>
                </button>
            </div>
        </div>
        
        {{/each}}
    </section>
</main>
{{/with}}